{
  "name": "ac-writer-app",
  "version": "1.0.0",
  "description": "Jira Forge app for generating acceptance criteria using Rovo AI",
  "main": "src/index.js",
  "scripts": {
    "build": "forge build",
    "deploy": "forge deploy",
    "install": "forge install",
    "tunnel": "forge tunnel",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@forge/api": "^3.0.0",
    "@forge/bridge": "^3.0.0",
    "@forge/react": "^10.0.0",
    "@forge/resolver": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@forge/cli": "^8.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/frontend/**"
    ]
  }
}
